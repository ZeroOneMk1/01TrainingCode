LoginMenu:

# GRAY 51/255, 51/255, 51/255, 1
# WHITE = 238/255, 238/255, 238/255, 1
# BLUE = 64/255, 98/255, 187/255, 1
# GREEN = 16/255, 150/255, 72/255, 1
# PGREEN = 25/255, 169/255, 153/255, 1
# FLAME = 229/255, 61/255, 0, 1


<LoginMenu>:
    Label:
        text: "OuO"
        color: 238/255, 238/255, 238/255, 1
        font_name: "ComfortaaBold"
        size_hint: 1/2, 1/2
        font_size: self.width/3 if self.width < self.height else self.height/3
        pos_hint: {"center_x": .5, "center_y": .8}

<LoginBG>:
    canvas:
        Color:
            rgba: 41/255, 41/255, 41/255, .5
        Rectangle:
            pos: self.pos
            size: self.size

<BackgroundPGREEN>:
    canvas:
        Color:
            rgba: 25/255, 169/255, 153/255, 1
        Rectangle:
            size: self.size
            
<BackgroundGRAY>:
    canvas:
        Color:
            rgba: 51/255, 51/255, 51/255, 1
        Rectangle:
            size: self.size

<BackgroundLGRAY>:
    canvas:
        Color:
            rgba: 91/255, 91/255, 91/255, 1
        Rectangle:
            size: self.size

<SmoothButton@Button>:
    background_color: 0, 0, 0, 0
    background_normal: ''
    back_color: 238/255, 238/255, 238/255, 1
    border_radius: [18]
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius